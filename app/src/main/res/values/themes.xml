<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Z_Platform" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorSecondary">@color/dark_secondary</item>
        <item name="android:colorForeground">@color/dark_foreground</item>

        <item name="android:statusBarColor">@color/dark_secondary</item>
    </style>

    <style name="Base.Theme.Z_Platform.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorSecondary">@color/dark_secondary</item>
        <item name="android:colorForeground">@color/dark_foreground</item>

        <item name="android:windowBackground">@color/dark_primary</item>
        <item name="actionMenuTextColor">@color/dark_foreground</item>
        <item name="android:textColor">@color/dark_foreground</item>

    </style>

    <style name="Base.Theme.Z_Platform.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="MyTextInputLayout_overlay">
        <item name="colorOnSurface">@color/dark_muted</item>
        <item name="colorPrimary">@color/dark_secondary</item>
        <item name="boxStrokeColor">@color/dark_secondary</item>
    </style>


    <style name="Theme.Z_Platform" parent="Base.Theme.Z_Platform" />
</resources>