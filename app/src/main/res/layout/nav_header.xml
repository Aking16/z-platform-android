<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawer_style">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/headerProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/Circular" />

    <TextView
        android:id="@+id/headerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="name"
        android:textColor="@color/dark_foreground"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/headerProfileImage"
        app:layout_constraintTop_toBottomOf="@+id/headerProfileImage" />

    <TextView
        android:id="@+id/headerUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textColor="@color/dark_muted"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/headerName"
        app:layout_constraintTop_toBottomOf="@+id/headerName" />

    <TextView
        android:id="@+id/headerFollowLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="0"
        android:textColor="@color/dark_foreground"
        app:layout_constraintStart_toStartOf="@+id/headerUsername"
        app:layout_constraintTop_toBottomOf="@+id/headerUsername" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Following"
        android:textColor="@color/dark_muted"
        app:layout_constraintStart_toEndOf="@+id/headerFollowLength"
        app:layout_constraintTop_toTopOf="@+id/headerFollowLength" />

    <TextView
        android:id="@+id/headerFollowerLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="0"
        android:textColor="@color/dark_foreground"
        app:layout_constraintStart_toEndOf="@+id/headerUsername"
        app:layout_constraintTop_toBottomOf="@+id/headerUsername" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Followers"
        android:textColor="@color/dark_muted"
        app:layout_constraintStart_toEndOf="@+id/headerFollowerLength"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />
</androidx.constraintlayout.widget.ConstraintLayout>